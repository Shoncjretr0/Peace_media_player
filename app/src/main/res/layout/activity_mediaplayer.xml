<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/viewer"
    android:layout_height="match_parent"
    android:background="#201D1D"
    tools:context=".mediaplayer">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.363"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:backgroundTint="#BF1B1A1A"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_more_vert_black_24dp"
            tools:layout_editor_absoluteX="119dp" />


    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#BF1B1A1A"
        app:layout_constraintStart_toStartOf="parent" >


        <ImageView
            android:id="@+id/leftseek"
            android:layout_width="220dp"
            android:layout_height="70dp"
            android:paddingLeft="0dp"
            android:src="@drawable/ic_fast_rewind_black_24dp"
            android:paddingBottom="0dp"
            tools:layout_editor_absoluteX="16dp" />

        <ImageView
            android:id="@+id/pause"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:paddingLeft="0dp"
            android:src="@drawable/ic_pause_circle_filled_black_24dp"
            tools:layout_editor_absoluteX="16dp" />
        <ImageView
            android:id="@+id/rightseekk"
            android:layout_width="220dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_fast_forward_black_24dp"
            tools:layout_editor_absoluteX="16dp" />



    </androidx.appcompat.widget.Toolbar>

    <SeekBar
        android:id="@+id/seekBarvolume"
        android:layout_width="166dp"
        android:layout_height="204dp"
        android:progressDrawable="@color/bri"
        android:rotation="270"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2" />



    <SeekBar
        android:id="@+id/seekBarbrightness"
        android:layout_width="166dp"
        android:layout_height="204dp"
        android:rotation="270"
        app:layout_constraintStart_toStartOf="parent"
        android:progressDrawable="@color/vol"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="67dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarvolume"
        app:srcCompat="@drawable/vol" />

    <TextView
        android:id="@+id/textbri"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:padding="5dp"
        android:text="1"
        android:textColor="@color/bri"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarvolume"
        app:srcCompat="@drawable/ic_volume_up_black_24dp" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarbrightness"
        app:srcCompat="@drawable/ic_volume_up_black_24dp" />
    <TextView
        android:id="@+id/textvol"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:text="1"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/vol"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarbrightness"
        app:srcCompat="@drawable/ic_volume_up_black_24dp" />




</androidx.constraintlayout.widget.ConstraintLayout>