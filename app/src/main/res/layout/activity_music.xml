<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/topBar">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true" >


                </androidx.appcompat.widget.Toolbar>



            </com.google.android.material.appbar.AppBarLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/topBar"
            android:layout_above="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/nightmode"
            >
                <RelativeLayout
                    android:id="@+id/RELsearchView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp" >

                    <HorizontalScrollView
                        android:id="@+id/fertbuy"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:scrollbars="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <SearchView
                                android:id="@+id/searchView"
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="0dp"
                                android:background="@drawable/roundedsearch"
                                android:iconifiedByDefault="false"
                                android:queryHint="Search music" />

                            <Spinner
                                android:id="@+id/spinner"
                                android:layout_width="120dp"
                                android:layout_height="50dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:background="@drawable/roundedspinner"
                                android:entries="@array/filters" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/roundedgener"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textAlignment="gravity"
                                android:text=" pop " />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:background="@drawable/roundedgener"
                                android:text=" jass " />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:background="@drawable/roundedgener"
                                android:text= "@string/r_d" />

                        </LinearLayout>
                    </HorizontalScrollView>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rellistviewbuy"
                android:layout_width="match_parent"
                android:layout_height="620dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="0dp"
                android:background="#000000"
               >


                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="138dp"
                    android:layout_marginTop="294dp"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="22dp" />

                <ListView
                    android:id="@+id/listviewbuy"
                    android:layout_width="match_parent"
                    android:layout_height="449dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp" />
            </RelativeLayout>
            </RelativeLayout>





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/bottomBar"
            android:layout_alignParentBottom="true"
            android:background="@color/nightmode">

            <TextView
                android:id="@+id/text"
                android:layout_width="315dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="7dp"
                android:layout_toStartOf="@+id/imageView6" />


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="59dp"
                android:layout_height="39dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/ic_music_note_black_24dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignEnd="@+id/text"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="11dp"
                android:layout_toEndOf="@+id/imageView3"
                android:text="unknown"
                android:textColor="#FFFFFF"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="46dp"
                android:layout_height="39dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/ic_play_circle_filled_black_24dp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:layout_toStartOf="@+id/imageView5"
                app:srcCompat="@drawable/ic_shuffle_black_24dp" />
        </RelativeLayout>



    </RelativeLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>